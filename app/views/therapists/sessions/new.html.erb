<% provide(:title, 'Log In') %>

<div class="heading"><div id="wrapper"><h3>Therapist Log in</h3></div></div>

<div id="wrapper">

	<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
	  
	  <%= f.label :email %><br />
	  <%= f.email_field :email, autofocus: true, id: "email" %>

	  <%= f.label :password %><br />
	  <%= f.password_field :password, autocomplete: "off", id: "email" %>

	  <% if devise_mapping.rememberable? -%>
	    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
	  <% end -%>

	  <div><%= f.submit "Log in" %></div>
	<% end %>

	<%= render "therapists/shared/links" %>
</div>