<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
	<%= f.label :email, class: "control-label" %><br />
  <%= f.email_field :email, autofocus: true, class: "form-control" %></div>

  <div class="form-group">
  <%= f.label :password, class: "control-label" %> <% if @validatable %><i>(<%= @minimum_password_length %> characters minimum)</i><% end %><br />
  <%= f.password_field :password, autocomplete: "off", class: "form-control" %></div>

  <div class="form-group"><%= f.label :password_confirmation, class: "control-label" %><br />
  <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %></div>

  <div><%= f.submit "Sign up" %></div>
<% end %>

<%= render "therapists/shared/links" %>
